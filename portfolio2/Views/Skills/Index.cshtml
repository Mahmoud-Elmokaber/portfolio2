@model List<Skill>


<!-- Skills Section -->
<section id="skills">
    <div class="container">
        <h2 class="section-title">My Skills</h2>
        <div class="row">
            @for (int i = 0; i < Model.Count; i += Model.Count / 2)
            {
                <div class="col-md-6">

                    @foreach (var skill in Model.Skip(i).Take(Model.Count/2))
                    {
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="fw-semibold">@skill.Name</span>
                                <span>@(skill.Percentage)%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: @(skill.Percentage)%" aria-valuenow="@(skill.Percentage)"
                                     aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</section>

