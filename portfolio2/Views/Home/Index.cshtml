@model PersonalInfo
<!-- Hero Section -->
<section id="hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold mb-3">@Model.Name</h1>
                <h2 class="fs-2 mb-4">@Model.JobTitle</h2>
                <p class="fs-5 mb-5">
                    @Model.hook
                </p>
                <div class="d-flex gap-3">
                    <a asp-area="" asp-controller="Project" asp-action="Index" class="btn btn-custom">View My Work</a>
                    <a asp-area="" asp-controller="ContactForm" asp-action="Index" class="btn btn-outline-light">Let's Connect</a>
                </div>
            </div>
            <div class="col-md-6 text-center mt-5 mt-md-0">
                <img src="~/images/1.jpg" alt="Mahmoud Almokaber"
                     class="img-fluid hero-img" width="400">
            </div>
        </div>
    </div>
</section>